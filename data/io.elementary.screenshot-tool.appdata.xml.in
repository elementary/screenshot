  <id>io.elementary.screenshot-tool</id>
  <metadata_license>CC0-1.0</metadata_license>
  <project_group>elementary</project_group>
  <project_license>GPL-3.0+</project_license>
  <name>Screenshot</name>
  <summary>Save images of the screen</summary>
  <description>
    <p>
      A simple screenshot tool. Capture whole screen shots, selected area shots, current window shots, and timed shots.
    </p>
  </description>
  <provides>
    <binary>screenshot</binary>
  </provides>
  <screenshots>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/elementary/screenshot-tool/master/data/screenshot.png</image>
    </screenshot>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/elementary/screenshot-tool/master/data/screenshot2.png</image>
    </screenshot>
  </screenshots>

<component type="desktop-application">
  <id>io.elementary.screenshot</id>
  <launchable type="desktop-id">io.elementary.screenshot.desktop</launchable>
  <translation type="gettext">io.elementary.screenshot</translation>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0+</project_license>

  <name>Screenshot</name>
  <summary>Save images of the screen</summary>
  <description>
    <p>
      A simple screenshot tool. Capture whole screen shots, selected area shots, current window shots, and timed shots.
    </p>
  </description>

  <screenshots>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/elementary/screenshot/8.0.1/data/screenshot.png</image>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/elementary/screenshot/8.0.1/data/screenshot2.png</image>
    </screenshot>
  </screenshots>

  <content_rating type="oars-1.1" />

  <provides>
    <binary>io.elementary.screenshot</binary>
  </provides>

  <recommends>
    <display_length compare="ge">500</display_length>
  </recommends>
  <supports>
    <control>pointing</control>
    <control>keyboard</control>
    <control>touch</control>
  </supports>

  <url type="bugtracker">https://github.com/elementary/screenshot/issues</url>
  <url type="donation">https://elementary.io/get-involved#funding</url>
  <url type="help">https://github.com/elementary/screenshot/discussions/categories/q-a</url>
  <url type="homepage">https://elementary.io/</url>
  <url type="translate">https://l10n.elementary.io/projects/screenshot/</url>

  <developer id="org.elementaryos">
    <name>elementary, Inc.</name>
  </developer>
  <project_group>elementary</project_group>
  <update_contact>contact_at_elementary.io</update_contact>

